*
  box-sizing border-box

body
  margin 0
  min-height auto !important
  font-family "Noto Sans Japanese"

table
  font-family "Noto Sans Japanese"

.dpln-layout.fixed-top
  header.dpln-layout-header
    border 1px solid rgba(0,0,0,0.3)
    box-shadow 0 2px 4px rgba(0,0,0,.2)
    background url('../image/header.jpg') center/cover
    color white
    position fixed
    top 0
    left 0
    height header-height
    width 100%
    z-index 1000
    line-height 64px
    font-size 24px
    padding-left 40px

    .site-title
      display inline-block
      transition all 0.4s ease

    i#toggle-nav
      visibility hidden
      opacity 0
      float right
      margin-right 40px
      font-size 48px
      line-height header-height
      transition 0.4s all ease

  nav.dpln-layout-nav
  //border 1px solid rgba(0,0,0,0.3)
  //background-color #FAFAFA
  //box-shadow 2px 0 4px rgba(0,0,0,.2)
    position fixed
    top header-height
    left 0
    height "calc(100% - %s)" % header-height
    width nav-width
    overflow-y auto
    z-index 999
    transition 0.4s all ease
    padding 15px

    figure.collapsible
      margin 0 0 0 0
      figcaption
        font-size 16px
        margin-left 0
        padding 12px
        .menu-title
          cursor pointer
          transition 0.2s all ease
        @media(min-width wide-content-min-width)
          .menu-titlehover
            background-color rgba(158,158,158,.2)
      ul
      //transition 0.4s all ease
        max-height 0
        list-style none
        margin -15px 0 0 0
        padding 0
        overflow-y hidden
        li
          font-size 14px
          margin-left 20px
          transition all 0.2s ease
        @media(min-width wide-content-min-width)
          lihover
            background-color rgba(158,158,158,.2)

    figure.collapsible.dpln-expand
      ul
        max-height 1000px
        padding-bottom 15px

    figure.collapsiblelast-child
      margin-bottom 15px

  main.dpln-layout-main
  //border 1px solid rgba(0,0,0,0.3)
    margin header-height 0 0 nav-width
    padding 15px 30px
    transition 0.4s all ease

@media (max-width wide-content-min-width)
  .dpln-layout.fixed-top
    header.dpln-layout-header
      i#toggle-nav
        visibility visible
        cursor pointer
        opacity 1
    nav.dpln-layout-nav
      border 1px solid rgba(0,0,0,0.3)
      background-color #FAFAFA
      box-shadow 2px 0 4px rgba(0,0,0,.2)
      left -1 * nav-width
      border-color transparent
      figure.collapsible
        background white
        box-shadow 2px 2px 4px rgba(0,0,0,.2)
        border-top 1px solid rgba(200,200,200,.7)
        border-right 1px solid rgba(200,200,200,.7)
        border-left 1px solid rgba(200,200,200,.7)
        figcaption
          padding 6px 12px
        ul
          transition 0.4s all ease
          margin 0
      figure.collapsiblefirst-child
        border-radius 5px 5px 0 0;
      figure.collapsiblelast-child
        border-bottom 1px solid rgba(200,200,200,.7)
        border-radius 0 0 5px 5px;
    main.dpln-layout-main
      margin-left 0

  .dpln-layout.fixed-top.dpln-collapse
    nav.dpln-layout-nav
      left -1 * nav-width
      box-shadow 0 0 0 transparent
      border-color transparent
    main.dpln-layout-main
      margin-left 0

  .dpln-layout.fixed-top.dpln-expand
    nav.dpln-layout-nav
      left 0
      box-shadow 2px 0 4px rgba(0,0,0,.2)
      border 1px solid rgba(0,0,0,0.3)
    main.dpln-layout-main
      margin-left 0

@media(max-width smallest-width)
  .site-title
    width 0
    opacity 0
