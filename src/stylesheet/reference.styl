.main-article[data-page='reference']
  .reference
    position relative
    max-width 800px
    .website-thumbnail
      position absolute
      right 0
      top 0
      max-height 80
      max-width 80
      img
        width 100%
        height 100%
        padding 0
    .website-title
      font-size 20px
      margin-bottom 7px
      padding-right 95px
      a
        text-decoration none
        &:hover
          text-decoration underline
    .website-url
      padding-right 95px
      a
        text-decoration none
        &:hover
          text-decoration underline
    .website-tags
      margin 10px 0
      span.tag
        border-radius 4px
        border 1px solid rgba(200,200,200,1)
        padding 3px 6px
        display inline-block
        cursor pointer
      span + span
        margin-left 10px
    .website-summary
      color #333

  .reference + .reference
    margin-top 30px